    <script>
        // Definición de las preguntas y respuestas
        const preguntas = [
            {
                texto: "El primer día de entrenamiento, el entrenador te pide que elijas cómo quieres comenzar.",
                opciones: [
                    { texto: "Tomar la iniciativa y liderar el calentamiento del equipo.", perfil: "D" },
